<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alibaba.uilearning.activity.lifecycle.FirstActivity" >

  	<Button 
  	    android:id="@+id/first_start_second_btn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:text="start second act"/>
  	<Button 
  	    android:id="@+id/first_start_dialog_btn"
  	    android:layout_toRightOf="@id/first_start_second_btn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:text="start dialog"/>
  	
  	<Button 
  	    android:id="@+id/first_start_dialog_act_btn"
  	    android:layout_below="@id/first_start_second_btn"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:text="start dialog act"/>
  	
</RelativeLayout>
