<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alibaba.uilearning.activity.MainActivity"
    tools:ignore="MergeRootFrame" >
    
    <LinearLayout
        android:id="@+id/main_buttons_layout" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/main_btn_act_lifecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity lifecycle"/>
        
    </LinearLayout>
    
    <LinearLayout
                android:id="@+id/category_over_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/main_buttons_layout" >

                <TextView
                    android:id="@+id/category_over_tv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/select_main_clicked" />

            </LinearLayout>
    
</RelativeLayout>

